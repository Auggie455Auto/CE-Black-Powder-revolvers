<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Enthusiast's Collection</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>       
				<li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="CEC_BigIron"]/comps/li[@Class="CombatExtended.CompProperties_AmmoUser"]/ammoSet</xpath>
                    <value>
                         <ammoSet>AmmoSet_45Colt</ammoSet>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="CEC_BigIron"]/verbs/li[@Class="CombatExtended.VerbPropertiesCE"]/defaultProjectile</xpath>
                    <value>
                          <defaultProjectile>Bullet_45Colt_FMJ</defaultProjectile>
                    </value>				
				</li>	
            </operations>
        </match>
    </Operation>
</Patch>